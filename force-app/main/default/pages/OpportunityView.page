<apex:page extensions="OppController"   applyHtmlTag="false" showHeader="false" renderAs="PDF" standardController="Opportunity">
    <html>
        <head>
            <style>
                * {
                box-sizing: border-box;
                }
                
                .heading {
                font-weight: bold;
                }
                
                .heading--main {
                font-size: 36px;
                }
                
                .heading--sub {
                font-size: 21px;
                }
                
                .box--half {
                float: left;
                width: 50%;
                }
                
                .box--full {
                float: left;
                width: 100%;
                }
                
                table {
                border-collapse: collapse;
                margin-top: 25px;
                width: 100%;
                }
                
                th {
                background-color: #92d5f0;
                font-align: left;
                font-size: 14px;
                font-weight: bold;
                padding: 5px;
                }
                
                td {
                font-size: 12px;
                padding: 5px;
                text-align: left;
                width: 33%;
                }                
            </style>
        </head>
        <body>
            <center>
                <h1 class="heading heading--main">All opportunities</h1>
                
            </center>
            <div class="box-full">
                
                <table >
                    <tr>
                        <th>Name</th>
                        <th>Amount</th>
                        <th>Close Date</th>
                        <th>Status</th>
                        <th>Account Name</th>
                    </tr>
                    <apex:repeat value="{!OppList}" var="item">
                        <tr>
                            <td>{!item.Name}</td>
                            <td>{!item.Amount}</td>
                            
                            <td>{!MONTH(item.CloseDate)}-{!DAY(item.CloseDate)}-{!YEAR(item.CloseDate)}</td>
                            <td>{!item.StageName}</td>
                            
                        </tr>
                    </apex:repeat>
                </table>
           
            </div>
        </body>
    </html>
</apex:page>